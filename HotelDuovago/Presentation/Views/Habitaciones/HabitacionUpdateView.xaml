<UserControl x:Class="Presentation.Views.Habitaciones.HabitacionUpdateView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Presentation.Views.Habitaciones"
             mc:Ignorable="d" 
             Background="White"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="24px">
        <Grid Margin="24,24,24,24">
            <Grid.RowDefinitions>
                <RowDefinition Height="10px"/>
                <RowDefinition Height="25px"/>
                <RowDefinition Height="10px"/>
                <RowDefinition Height="25px"/>
                <RowDefinition Height="10px"/>
                <RowDefinition Height="25px"/>
                <RowDefinition Height="10px"/>
                <RowDefinition Height="25px"/>
                <RowDefinition Height="10px"/>
                <RowDefinition Height="25px"/>
                <RowDefinition Height="10px"/>
                <RowDefinition Height="25px"/>
                <RowDefinition Height="32px"/>
                <RowDefinition Height="32px"/>
                <RowDefinition Height="60px"/>
                <RowDefinition Height="32px"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <TextBlock 
                    FontWeight="Medium"
                    Text="ID"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Left"/>
            </Grid>
            <Grid Grid.Row="1">
                <TextBox Grid.Column="0" x:Name="txtID" />
            </Grid>

            <Grid Grid.Row="2">
                <TextBlock 
                FontWeight="Medium"
                Text="Numero"
                VerticalAlignment="Center"
                HorizontalAlignment="Left"/>
            </Grid>
            <Grid Grid.Row="3">
                <TextBox Grid.Column="0" x:Name="txtNumero" />
            </Grid>

            <Grid Grid.Row="4">
                <TextBlock 
                FontWeight="Medium"
                Text="Tipo"
                VerticalAlignment="Center"
                HorizontalAlignment="Left"/>
            </Grid>
            <Grid Grid.Row="5">
                <TextBox Grid.Column="0" x:Name="txtTipo" />
            </Grid>

            <Grid Grid.Row="6">
                <TextBlock 
                    FontWeight="Medium"
                    Text="Precio"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Left"/>
            </Grid>
            <Grid Grid.Row="7">
                <TextBox Grid.Column="0" x:Name="txtPrecio" />
            </Grid>

            <Grid Grid.Row="8">
                <TextBlock 
                    FontWeight="Medium"
                    Text="Capacidad"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Left"/>
            </Grid>
            <Grid Grid.Row="9">
                <TextBox Grid.Column="0" x:Name="txtCapacidad" />
            </Grid>

            <Grid Grid.Row="10">
                <TextBlock 
                    FontWeight="Medium"
                    Text="Descripcion"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Left"/>
            </Grid>
            <Grid Grid.Row="11">
                <TextBox Grid.Column="0" x:Name="txtDescripcion" />
            </Grid>

            <Grid Grid.Row="12">
                <CheckBox x:Name="checkDisponible" 
              Content="Disponible" 
              HorizontalAlignment="Left" 
              VerticalAlignment="Center"/>
            </Grid>

            <Grid Grid.Row="14">
                <Button Grid.Column="2" 
                    x:Name="btnUpdate" 
                    Content="Update"
                    Click="OnClickBtnUpdate">
                </Button>
            </Grid>
            <Grid Grid.Row="15">
                <TextBlock 
                x:Name="txbResultado"
                FontWeight="Medium"
                Text=""
                VerticalAlignment="Center"
                HorizontalAlignment="Center"/>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
