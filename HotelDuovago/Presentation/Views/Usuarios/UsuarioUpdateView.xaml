<UserControl x:Class="Presentation.Views.Usuarios.UsuarioUpdateView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Presentation.Views.Usuarios"
             mc:Ignorable="d" 
             Background="White"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="24px">
        <Grid Margin="24,24,24,24">
            <Grid.RowDefinitions>
                <RowDefinition Height="10px"/>
                <RowDefinition Height="25px"/>
                <RowDefinition Height="10px"/>
                <RowDefinition Height="25px"/>
                <RowDefinition Height="10px"/>
                <RowDefinition Height="25px"/>
                <RowDefinition Height="10px"/>
                <RowDefinition Height="25px"/>
                <RowDefinition Height="10px"/>
                <RowDefinition Height="25px"/>
                <RowDefinition Height="32px"/>
                <RowDefinition Height="60px"/>
                <RowDefinition Height="32px"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <TextBlock 
                    FontWeight="Medium"
                    Text="ID"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Left"/>
            </Grid>
            <Grid Grid.Row="1">
                <TextBox Grid.Column="0" x:Name="txtID" />
            </Grid>

            <Grid Grid.Row="2">
                <TextBlock 
                FontWeight="Medium"
                Text="Nombre"
                VerticalAlignment="Center"
                HorizontalAlignment="Left"/>
            </Grid>
            <Grid Grid.Row="3">
                <TextBox Grid.Column="0" x:Name="txtNombre" />
            </Grid>

            <Grid Grid.Row="4">
                <TextBlock 
                FontWeight="Medium"
                Text="Telefono"
                VerticalAlignment="Center"
                HorizontalAlignment="Left"/>
            </Grid>
            <Grid Grid.Row="5">
                <TextBox Grid.Column="0" x:Name="txtTelefono" />
            </Grid>

            <Grid Grid.Row="6">
                <TextBlock 
                    FontWeight="Medium"
                    Text="Email"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Left"/>
            </Grid>
            <Grid Grid.Row="7">
                <TextBox Grid.Column="0" x:Name="txtEmail" />
            </Grid>

            <Grid Grid.Row="8">
                <TextBlock 
                    FontWeight="Medium"
                    Text="Direccion"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Left"/>
            </Grid>
            <Grid Grid.Row="9">
                <TextBox Grid.Column="0" x:Name="txtDireccion" />
            </Grid>

            <Grid Grid.Row="11">
                <Button Grid.Column="2" 
                    x:Name="btnUpdate" 
                    Content="Update"
                    Click="OnClickBtnUpdate">
                </Button>
            </Grid>
            <Grid Grid.Row="13">
                <TextBlock 
                x:Name="txbResultado"
                FontWeight="Medium"
                Text=""
                VerticalAlignment="Center"
                HorizontalAlignment="Center"/>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
