<UserControl x:Class="Presentation.Views.ProductView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Presentation.Views"
             mc:Ignorable="d" 
             Background="White"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="24px">
        <Grid Margin="24px">
            <Grid.RowDefinitions>
                <RowDefinition Height="32px"/>
                <RowDefinition Height="16px"/>
                <RowDefinition Height="32px"/>
                <RowDefinition Height="8px"/>
                <RowDefinition Height="32px"/>
                <RowDefinition Height="24px"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid Grid.Column="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="10px" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBox Grid.Column="0" x:Name="txtSearch" />

                <Button Grid.Column="2" 
                        x:Name="btnSearch" 
                        Content="Search"
                        Click="OnClickBtnSearch">
                </Button>
            </Grid>

            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="48*" />
                    <ColumnDefinition Width="4*" />
                    <ColumnDefinition Width="48*" />
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="24px" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" 
                               x:Name="lblOrderOptions"
                               Text="Sort by:"
                               VerticalAlignment="Center"/>

                    <ComboBox Grid.Column="2"
                              x:Name="cmbOrderOptions"
                              ItemsSource="{Binding OrderOptions}"
                              DisplayMemberPath="Label"
                              MouseDoubleClick="OnClickBtnSearch">
                    </ComboBox>
                </Grid>

                <Grid Grid.Column="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="24px" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" 
                               x:Name="lblManufacturers"
                               Text="By manufacturer:"
                               VerticalAlignment="Center"/>

                    <ComboBox Grid.Column="2"
                              x:Name="cmbManufacturers"
                              ItemsSource="{Binding Manufacturers}"
                              DisplayMemberPath="Name"
                              SelectionChanged="OnChangeCmbManufacturers">
                    </ComboBox>
                </Grid>
            </Grid>

            <Grid Grid.Row="4" HorizontalAlignment="Right">
                <Grid.ColumnDefinitions >
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="64px" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="2" 
                           x:Name="txbTotalPrices"
                           FontWeight="Medium"
                           Text="Total Prices"
                           VerticalAlignment="Center"/>

                <TextBlock Grid.Column="0" 
                           x:Name="txbTotalRows"
                           FontWeight="Medium"
                           Text="Total Rows"
                           VerticalAlignment="Center"/>
            </Grid>

            <DataGrid Grid.Row="6"
                      x:Name="dataSource"
                      IsReadOnly="True">
                <DataGrid.Columns>
                    <DataGridTextColumn 
                        Header="Code" 
                        Binding="{Binding Code}" 
                        Width="10*" />
                    <DataGridTextColumn 
                        Header="Description" 
                        Binding="{Binding Description}" 
                        Width="20*" />
                    <DataGridTextColumn 
                        Header="Price" 
                        Binding="{Binding Price, StringFormat=C}" 
                        Width="20*" />
                    <DataGridTextColumn 
                        Header="Manufacturer Code" 
                        Binding="{Binding Manufacturer.Code}" 
                        Width="20*" />
                    <DataGridTextColumn 
                        Header="Manufacturer Name" 
                        Binding="{Binding Manufacturer.Name}" 
                        Width="20*" />
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Grid>
</UserControl>
