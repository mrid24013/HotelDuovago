<Window x:Class="Presentation.Views.Clientes.ClienteMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Presentation.Views.Clientes"
        xmlns:views="clr-namespace:Presentation.Views.Clientes"
        mc:Ignorable="d"
        Style="{StaticResource MaterialDesignWindow}"
        Title="Proyecto" Height="600" Width="1200">
    <Window.Resources>
        <DataTemplate x:Name="ClienteReadView" DataType="{x:Type views:ClienteReadView}">
            <views:ClienteReadView DataContext="{Binding}" />
        </DataTemplate>
    </Window.Resources>

    <Grid>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20*" />
            <ColumnDefinition Width="80*" />
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="48"/>
                <RowDefinition Height="48"/>
                <RowDefinition Height="48"/>
                <RowDefinition Height="48"/>
                <RowDefinition />
            </Grid.RowDefinitions>

            <Menu Grid.Row="0">
                <MenuItem Header="Read" Click="HandleClienteReadView"/>
            </Menu>

            <Menu Grid.Row="1">
                <MenuItem Header="Insert" Click="HandleClienteInsertView"/>
            </Menu>

            <Menu Grid.Row="2">
                <MenuItem Header="Update" Click="HandleClienteUpdateView"/>
            </Menu>

            <Menu Grid.Row="3">
                <MenuItem Header="Delete" Click="HandleClienteDeleteView"/>
            </Menu>
        </Grid>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="48" />
                <RowDefinition />
            </Grid.RowDefinitions>

            <Menu Height="48" Width="Auto" Padding="8" >
                <MenuItem Header="Read" Padding="8 0" Margin="4 0" Height="32" Click="HandleClienteReadView"/>
                <MenuItem Header="Insert" Padding="8 0" Margin="4 0" Height="32" Click="HandleClienteInsertView"/>
                <MenuItem Header="Update" Padding="8 0" Margin="4 0" Height="32" Click="HandleClienteUpdateView"/>
                <MenuItem Header="Delete" Padding="8 0" Margin="4 0" Height="32" Click="HandleClienteDeleteView"/>
            </Menu>
        </Grid>
    </Grid>
</Window>
