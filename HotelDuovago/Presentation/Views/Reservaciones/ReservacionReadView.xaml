<UserControl x:Class="Presentation.Views.Reservaciones.ReservacionReadView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Presentation.Views.Reservaciones"
             mc:Ignorable="d" 
             Background="White"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="24px">
        <Grid Margin="24,24,24,24">
            <Grid.RowDefinitions>
                <RowDefinition Height="32px"/>
                <RowDefinition Height="32px"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid Grid.Column="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="10px" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="10px" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBox Grid.Column="0" x:Name="txtSearch" />

                <Button Grid.Column="2" 
                        x:Name="btnSearch" 
                        Content="Search"
                        Click="OnClickBtnSearch">
                </Button>

                <Button Grid.Column="4" 
                        x:Name="btnExport" 
                        Content="Export"
                        Background="ForestGreen"
                        Click="ExportToExcel">
                </Button>
            </Grid>

            <Grid Grid.Row="1" HorizontalAlignment="Right">
                <Grid.ColumnDefinitions >
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="64px" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" 
                           x:Name="txbTotalRows"
                           FontWeight="Medium"
                           Text="Total Rows"
                           VerticalAlignment="Center"/>
            </Grid>

            <DataGrid Grid.Row="4"
                      x:Name="dataSource"
                      IsReadOnly="True">
                <DataGrid.Columns>
                    <DataGridTextColumn 
                        Header="ID" 
                        Binding="{Binding Id}" 
                        Width="7*" />
                    <DataGridTextColumn 
                        Header="Cliente" 
                        Binding="{Binding ClienteId}" 
                        Width="10*" />
                    <DataGridTextColumn 
                        Header="Habitacion" 
                        Binding="{Binding HabitacionId}" 
                        Width="10*" />
                    <DataGridTextColumn 
                        Header="Entrada"
                        Binding="{Binding FechaEntrada}"
                        Width="12*" />
                    <DataGridTextColumn
                        Header="Salida" 
                        Binding="{Binding FechaSalida}" 
                        Width="12*" />
                    <DataGridTextColumn
                        Header="Dias"
                        Binding="{Binding DiasEstancia}" 
                        Width="7*" />
                    <DataGridTextColumn
                        Header="Total"
                        Binding="{Binding MontoTotal}" 
                        Width="10*" />
                    <DataGridTextColumn
                        Header="Estado"
                        Binding="{Binding Estado}" 
                        Width="12*" />
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Grid>
</UserControl>
